{% extends 'base.html.twig' %}

{% block body %}
    <h1>Departement</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ departement.id }}</td>
            </tr>
            <tr>
                <th>Departementcode</th>
                <td>{{ departement.departementCode }}</td>
            </tr>
            <tr>
                <th>Departementname</th>
                <td>{{ departement.departementName }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('departement_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('departement_edit', { 'id': departement.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
